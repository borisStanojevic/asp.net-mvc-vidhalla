@model Vidhalla.Core.Domain.Account
@{
    ViewBag.Title = "Edit";
}

<div class="container" style="margin-top: 8.5em; width: 45%; ">

    <h2 style="margin-bottom: 1.3em;">Edit</h2>

    @using (Html.BeginForm("Edit", "Accounts"))
    {
        <div class="form-group">
            @Html.LabelFor(a => a.Password)
            @Html.PasswordFor(a => a.Password, new { @class = "form-control", autocomplete = "off", value = Model.Password })
            @Html.ValidationMessageFor(a => a.Password)
        </div>

        <div class="form-group">
            @Html.LabelFor(a => a.FirstName)
            @Html.TextBoxFor(a => a.FirstName, new { @class = "form-control", autocomplete = "off" })
            @Html.ValidationMessageFor(a => a.FirstName)
        </div>

        <div class="form-group">
            @Html.LabelFor(a => a.LastName)
            @Html.TextBoxFor(a => a.LastName, new { @class = "form-control", autocomplete = "off" })
            @Html.ValidationMessageFor(a => a.LastName)
        </div>

        <div class="form-group">
            @Html.LabelFor(a => a.ChannelDescription)
            @Html.TextAreaFor(a => a.ChannelDescription, new {@class = "form-control", autocomplete = "off"})
            @Html.ValidationMessageFor(a => a.ChannelDescription)
        </div>

        <div style="width: 35%; margin-bottom: 1em; margin-top: 0.5em;">
            @Html.LabelFor(a => a.Role)
            @Html.EnumDropDownListFor(a => a.Role, "Select role", new { @class = "form-control" })
            @Html.ValidationMessageFor(a => a.Role)
        </div>

        <div class="form-group">
            <label>
                @Html.CheckBoxFor(a => a.IsBlocked) Block
            </label>
        </div>
        @Html.HiddenFor(a => a.Username)
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-warning" style="margin-bottom: 5em;">
            <span class="glyphicon glyphicon-edit"></span> Edit
        </button>
    }


</div>

