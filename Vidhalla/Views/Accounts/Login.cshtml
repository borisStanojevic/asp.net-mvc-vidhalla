@model Vidhalla.ViewModels.Accounts.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<div class="container" style="margin-top: 8.5em; width: 30%;">

    <h2 style="margin-bottom: 1.3em;">Login</h2>

    @using (Html.BeginForm("Login", "Accounts", FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(m => m.Username)
            @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Password)
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>

        @Html.ValidationSummary(true, "", new { @class = "field-validation-error" })
        @Html.AntiForgeryToken()
        <button type="submit" class="btn btn-primary" style="margin-bottom: 5em;">
            Login
        </button>
    }

</div>
