@model Vidhalla.ViewModels.Accounts.DetailsViewModel

@{
    ViewBag.Title = "Details";
    var account = Model.Account;
    var subscribeds = Model.Subscribeds;

}

<div class="modal fade" id="uploadVideoDialog" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Upload</h4>
            </div>
            <div class="modal-body">
                <form role="form">
                    <div class="form-group">
                        <input name="name" type="text" class="form-control" placeholder="Video Name" required>
                    </div>
                    <div class="form-group">
                        <input name="url" type="url" class="form-control" placeholder="Url" required>
                    </div>
                    <div class="form-group">
                        <input name="description" type="text" class="form-control" placeholder="Description">
                    </div>
                    <div class="form-group">
                        <select id="visibilitySelect">
                            <option value="PUBLIC"> Public</option>
                            <option value="UNLISTED"> Unlisted</option>
                            <option value="PRIVATE"> Private</option>
                        </select>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input name="commentsAllowed" type="checkbox" value="">Allow Comments
                        </label>
                    </div>
                    <div class="checkbox">
                        <label>
                            <input name="ratingVisible" type="checkbox" value="">Rating Visible
                        </label>
                    </div>
                    <label class="errorMsgLabel"></label>
                    <button id="uploadVideoBtn" class="btn btn-primary btn-block">
                        <span class="glyphicon glyphicon-upload"></span> Upload
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<div style="margin-top: 7em;" class="container">

    <main>
        <img alt="Profile picture" src=@Url.Action("LoadProfilePicture", "Accounts", new {profilePicture = account.ProfilePicture}) class="bigThumbnail">
        <h1 id="username"> @account.Username </h1>

        @using (Html.BeginForm("UploadProfilePicture", "Accounts", FormMethod.Post, new { enctype = "multipart/form-data", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <input id="accountId" name="accountId" type="hidden" value=@account.Id>
            <div class="form-group">
                <input type="file" multiple accept="image/*" name="picture" id="picture">
            </div>
            <div class="form-group">
                <button id="uploadImageBtn" type="submit" class="btn btn-default"> Upload</button>
            </div>
        }

        <span style="display:block;content:'';clear:both">
            <span id="subscribersSpan" style="float: left"> @account.Subscribers.Count </span>
            <button style="float: right" id="subscribeBtn" type="button" class="btn btn-primary btn-lg">Subscribe</button>
        </span>
        <p id="channelInfo"> @account.ChannelDescription </p>

        @Html.ActionLink("Edit", "Edit", "Accounts", new { id = account.Id }, new { @class = "btn btn-info", role = "button" })
        @using (Html.BeginForm("Delete", "Accounts", FormMethod.Post))
        {
            @Html.HiddenFor(m => m.Account.Id)
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-danger">
                <span class="glyphicon glyphicon-trash"></span> Delete
            </button>
        }

    </main>

    <hr>

</div>

<div class="container" style="display:block;content:'';clear:both">
    <section style="width : 40%;float: left">
        <button id="showUploadVideoBtn" type="button" class="btn btn-success btn-md">
            <span class="glyphicon glyphicon-upload"></span> Upload
        </button>

        <br>
        <h3>Uploaded Videos</h3>
        <select style="width: 10em" id="sortUploadedSelect" class="form-control">
            <option value="dtUploadedDesc"> Newest First</option>
            <option value="dtUploadedAsc"> Oldest First</option>
            <option value="viewsAsc"> Views, Asc</option>
            <option value="viewsDesc"> Views, Desc</option>
        </select>
        <br>
        <ul id="uploadedVideosList">
            <!--Ovdje kacim dinamicki kreirane <li> videa koje je korisnik cija se stranica posmatra, uploadovao  -->
            @foreach (var video in account.UploadedVideos)
            {
                <li>
                    <div>
                        <iframe src=@video.Url></iframe>
                        <button type="button" class="btn btn-danger deleteVideoBtn" data-id=@video.Id>
                            <span class="glyphicon glyphicon-trash"></span> Delete
                        </button>
                        <h4> @Html.ActionLink(video.Title, "Details", "Videos", new { id = video.Id }, new { }) </h4>
                        <span> @video.ViewsCount views</span>
                        <span style="display:block">Published on @video.DateUploaded.ToShortDateString() </span>
                    </div>
                </li>
            }

        </ul>
    </section>
    <aside style="margin-top: 2.4em;width : 20%; float: right;">
        <h3>Following</h3>
        <br>
        <ul id="subscribedsList">

            <!-- Ovdje kacim dinamicki kreirane <li> korisnika koje korisnik cija se stranica posmatra, prati -->
            @foreach (var subscribed in subscribeds)
            {
                <li>
                    <a href=@Url.Action("Details", "Accounts", new {username = subscribed.Username})> <img src=@Url.Content($"~/Content/Images/{subscribed.ProfilePicture}") class="smallThumbnail"> @subscribed.Username </a>
                    &nbsp;
                    <span style="float: right; padding-top: 0.46em;">@subscribed.Subscribers.Count</span>
                    <hr />
                </li>

            }

        </ul>
    </aside>
</div>

@section scripts
{
    <script type="text/javascript" src=@Url.Content("~/Scripts/accounts-details.js")></script>
}
