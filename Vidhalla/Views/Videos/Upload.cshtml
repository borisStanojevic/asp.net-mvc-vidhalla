@model Vidhalla.Core.Domain.Video
@{
    ViewBag.Title = "Upload";
}



<div class="container" style="margin-top: 8.5em; width: 45%;">
    <h2 style="margin-bottom: 1.3em;">Upload</h2>

    @using (Html.BeginForm("Upload", "Videos"))
    {
        <div class="form-group">
            @Html.LabelFor(v => v.Title)
            @Html.TextBoxFor(v => v.Title, new { @class = "form-control", autocomplete = "off" })
            @Html.ValidationMessageFor(v => v.Title)
        </div>

        <div class="form-group">
            @Html.LabelFor(v => v.Url)
            @Html.TextBoxFor(v => v.Url, new { @class = "form-control", autocomplete = "off" })
            @Html.ValidationMessageFor(v => v.Url)
        </div>

        <div class="form-group">
            @Html.LabelFor(v => v.Description)
            @Html.TextBoxFor(v => v.Description, new { @class = "form-control", autocomplete = "off" })
            @Html.ValidationMessageFor(v => v.Description)
        </div>

        <div style="width: 30%; margin-bottom: 1em; margin-top: 0.5em;">
            @Html.LabelFor(v => v.Visibility)
            @Html.EnumDropDownListFor(v => v.Visibility, "Select Visibility", new { @class = "form-control" })
            @Html.ValidationMessageFor(v => v.Visibility)
        </div>

        <div class="form-group">
            <label>
                @Html.CheckBoxFor(v => v.IsCommentingAllowed) Allow Comments
            </label>
        </div>
        <div class="form-group">
            <label>
                @Html.CheckBoxFor(v => v.IsRatingVisible) Rating Visible
            </label>
        </div>

        <button type="submit" class="btn btn-primary btn-block" style="width: 30%">
            <span class="glyphicon glyphicon-upload"></span> Upload
        </button>
    }

</div>


