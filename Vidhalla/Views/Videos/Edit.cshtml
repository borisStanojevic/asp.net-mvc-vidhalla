@model Vidhalla.Core.Domain.Video
@{
    ViewBag.Title = "Edit";
}

<div class="container" style="margin-top: 8.5em; width: 45%; ">

    <h2 style="margin-bottom: 1.3em;">Edit</h2>


    @using (Html.BeginForm("Edit", "Videos"))
    {
        <div class="form-group">
            @Html.LabelFor(v => v.Title)
            @Html.TextBoxFor(v => v.Title, new { @class = "form-control", autocomplete = "off" })
        </div>
        <div>
            @Html.LabelFor(v => v.Description)
            @Html.TextAreaFor(v => v.Description, new { @class = "form-control" })
        </div>
        <div style="width: 30%; margin-bottom: 1em; margin-top: 0.5em;">
            @Html.LabelFor(v => v.Visibility)
            @Html.EnumDropDownListFor(v => v.Visibility, "Select Visibility", new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>
                @Html.CheckBoxFor(v => v.IsBlocked) Block
            </label>
        </div>
        <div class="form-group">
            <label>
                @Html.CheckBoxFor(v => v.IsCommentingAllowed) Allow Comments
            </label>
        </div>
        <div class="form-group">
            <label>
                @Html.CheckBoxFor(v => v.IsRatingVisible) Show Rating
            </label>
        </div>
        @Html.HiddenFor(v => v.Id)
        <button type="submit" class="btn btn-warning">
            <span class="glyphicon glyphicon-edit"></span> Edit
        </button>
    }

</div>